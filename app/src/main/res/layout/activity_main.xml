<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sarvesh"
        android:layout_width="90dp"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/sarvesh1"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/editProfile"
        app:layout_constraintLeft_toRightOf="@id/vedu"
        tools:ignore="MissingClass,MissingConstraints"
        tools:layout_editor_absoluteX="204dp"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/aai"
        android:layout_width="92dp"
        android:layout_height="103dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/aai"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfile"
        tools:ignore="MissingClass,MissingConstraints"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/followers3"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Following"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/followers4"
        app:layout_constraintTop_toBottomOf="@+id/following1" />

    <TextView
        android:id="@+id/followers4"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Followers"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/posts2"
        app:layout_constraintTop_toBottomOf="@+id/followers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linear1"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_lock_24"
            android:id="@+id/lock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/profileName"
            android:text="Krishna Bhosle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:src="@drawable/plus"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/list"/>

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgprofile"
        android:layout_width="130dp"
        android:layout_height="126dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img1"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        tools:ignore="MissingClass,MissingConstraints"
        tools:layout_editor_absoluteX="20dp"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/vedu"
        android:layout_width="89dp"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/vedant"
        android:padding="2dp"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toBottomOf="@+id/editProfile"
        app:layout_constraintLeft_toRightOf="@id/aai"
        tools:ignore="MissingClass,MissingConstraints"
        tools:layout_editor_absoluteX="112dp"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iam"
        android:layout_width="93dp"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/kkk"
        app:civ_border_color="@color/white"
        app:civ_border_overlay="true"
        android:padding="2dp"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toBottomOf="@+id/editProfile"
        app:layout_constraintLeft_toRightOf="@id/sarvesh"
        tools:ignore="MissingClass,MissingConstraints"
        tools:layout_editor_absoluteX="292dp"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/posts"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:text="25 "
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imgprofile"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <TextView
        android:id="@+id/posts2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="Posts "
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/imgprofile"
        app:layout_constraintTop_toBottomOf="@+id/posts" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:text="2,225"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/posts"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <TextView
        android:id="@+id/following1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="500"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/followers"
        app:layout_constraintTop_toBottomOf="@id/linear1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imgprofile"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 👑👑 Krishna Bhosle 👑👑"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="# Birthday_B@$# ON_17_11🎂"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="# Software engineer 🖥️🖥️"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="# Billions 😎f dreams are taking 😎ff.. "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="# LIFE = Mom+Dad+Friends+🎯"/>

    </LinearLayout>

    <TextView
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit"
        android:gravity="center_horizontal"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/aai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="❣️❣️"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aai"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/aai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Brother"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="136dp"
        app:layout_constraintTop_toBottomOf="@id/vedu"
        app:layout_constraintLeft_toRightOf="@id/aai1"
        android:layout_marginLeft="45dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/sarvesh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="J@@@n"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/aai2"
        app:layout_constraintTop_toBottomOf="@id/sarvesh"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/iam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="personal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/sarvesh2"
        app:layout_constraintTop_toBottomOf="@id/iam"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_grid_on_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aai1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personal"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/sarvesh2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="120dp"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:id="@+id/linear3"
       app:layout_constraintTop_toBottomOf="@id/grid"
       android:layout_height="wrap_content">


       <ImageView
           android:id="@+id/tr1"
           android:layout_width="120dp"
           android:layout_height="100dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="12dp"
           android:src="@drawable/kk1"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/grid"
           tools:ignore="MissingConstraints" />

       <ImageView
           android:id="@+id/tr3"
           android:layout_width="120dp"
           android:layout_height="100dp"
           android:layout_marginTop="12dp"
           android:layout_marginRight="24dp"
           android:src="@drawable/krish"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/personal"
           tools:ignore="MissingConstraints" />

       <ImageView
           android:id="@+id/tr"
           android:layout_width="120dp"
           android:layout_height="100dp"
           android:layout_marginTop="12dp"
           android:layout_marginRight="24dp"
           android:layout_weight="1"
           android:src="@drawable/vedu2"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/personal"
           tools:ignore="MissingConstraints" />

   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>